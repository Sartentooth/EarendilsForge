---
// BaseLayout.astro
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import WhatsAppFloat from "../components/WhatsAppFloat.astro";
import { ViewTransitions } from "astro:transitions";
import { withBase } from "../utils/base";
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Earendil's Forge – Impresión 3D, insumos y creatividad fantástica."
    />
    <link rel="icon" rel="preload" href={withBase("favicon.svg")} type="image/svg+xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400..900&family=Crimson+Text:ital,wght@0,400;0,600;0,700;1,400;1,600;1,700&display=swap"
      rel="stylesheet" rel="preload"
    />
    <title>Earendil's Forge</title>
  </head>
  <body class="bg-theme-surface text-theme-text font-body">
    <ViewTransitions />
    <Header />
    <main class="px-4 py-8 max-w-full mx-auto">
      <slot />
    </main>
    <WhatsAppFloat />
    <Footer />
  </body>
</html>